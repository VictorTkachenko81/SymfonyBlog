{% extends 'AppBundle::base.html.twig' %}

{% block body %}
    <div class="table-responsive">
        <table class="table table-striped table-article">
            <thead>
            <tr>
                <th>Title</th>
                <th>User</th>
                <th>Article</th>
                <th>Created</th>
            </tr>
            </thead>
            <tbody>
                {% for article in articles %}
                    <tr>
                        <td><a href="">
                                {{ article.title }}
                            </a>
                        </td>
                        <td>{{ article.user.name }}</td>
                        <td>{{ article.article }}</td>
                        <td>{{ article.createdAt|date("d.m.Y") }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {{ dump() }}
{% endblock body %}