{% extends 'AppBundle::base.html.twig' %}

{% block body %}
    <div style="width: 400px; margin: 50px auto 50px;">
        <h3 class="section-heading">Login Form</h3>
        {% if error %}
            <div class="alert alert-danger" role="alert">
                <strong>Oh snap!</strong> {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
        <form class="form-horizontal" role="form" action="{{ path('login_check') }}" method="post">
            <div class="form-group">
                <label for="username" class="control-label sr-only">Username</label>
                <div class="col-sm-12">
                    <div class="input-group">
                        <input type="text" class="form-control input-sm" id="username" name="_username" value="{{ last_username }}" placeholder="Username">
                        <span class="input-group-addon"><i class="fa fa-user"></i></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword3" class="control-label sr-only">Password</label>
                <div class="col-sm-12">
                    <div class="input-group">
                        <input type="password" class="form-control input-sm" id="inputPassword3" name="_password" placeholder="Password" style="cursor: pointer; background-image: url(&quot;data:image/png;base64,&quot;); background-attachment: scroll; background-position: 100% 50%; background-repeat: no-repeat;">
                        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12">
                    <label class="fancy-checkbox">
                        <input type="checkbox">
                        <span>Remember me</span>
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12">
                    <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-sign-in"></i> Sign in</button>
                </div>
            </div>
        </form>
    </div>
{% endblock body %}
