{% extends 'AppBundle:admin:admin.html.twig' %}

{% block content %}

    <h2 class="section-heading">
        Tags
    </h2>

    <p style="text-align: right;">
        <a class="btn btn-sm btn-default" href="{{ url('tagNew') }}" role="button" id="show_add_form">
            Add new tag
        </a>
    </p>

    <div id="formBlock"></div>

    <div class="table-responsive">
        <table class="table table-striped table-squad">
            <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
            </tr>
            </thead>
            <tbody>

            {% for key, tag in tags %}
                <tr>
                    <td>{{ key + 1 }}</td>
                    <td>
                        {{ tag.name }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock content %}