<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="app.twig_extension"
                 class="AppBundle\Twig\AppExtension"
                 public="false">
            <tag name="twig.extension" />
            <argument key="doctrine" type="service" id="doctrine"/>
        </service>

        <service id="app.media_handler"
                 class="AppBundle\Services\MediaHandler">
            <argument key="liipImagine" type="service" id="liip_imagine.cache.manager"/>
        </service>

        <service id="app.doctrine_subscriber" class="AppBundle\EventListener\DoctrineEventSubscriber">
            <tag name="doctrine.event_subscriber" connection="default" />
            <argument key="mediaHandler" type="service" id="app.media_handler"/>
        </service>

        <service id="app.blog_handler"
                 class="AppBundle\Services\BlogHandler">
            <argument key="doctrine" type="service" id="doctrine"/>
            <argument key="formFactory" type="service" id="form.factory"/>
            <argument key="router" type="service" id="router"/>
            <argument key="validator" type="service" id="validator"/>
        </service>

    </services>
</container>